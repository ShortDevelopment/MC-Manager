<Application
    x:Class="MC_Manager.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MC_Manager" xmlns:controls="using:Microsoft.UI.Xaml.Controls">
    <Application.Resources>
        <controls:XamlControlsResources>
            <controls:XamlControlsResources.MergedDictionaries>
                <!-- Other app resources here -->
                <ResourceDictionary>
                    <FontFamily x:Key="FluentIconsFont">/Assets/Fonts/Fluent/Segoe Fluent Icons.ttf#Segoe Fluent Icons</FontFamily>
                    <Style TargetType="FontIcon">
                        <Setter Property="FontFamily" Value="{StaticResource FluentIconsFont}" />
                    </Style>
                    <SolidColorBrush x:Key="SystemControlBackgroundBaseLowBrush">#0000</SolidColorBrush>
                </ResourceDictionary>
            </controls:XamlControlsResources.MergedDictionaries>
        </controls:XamlControlsResources>
    </Application.Resources>
</Application>
